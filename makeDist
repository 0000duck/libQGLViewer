tar xzf $libNameVersion.tar.gz

rm $WebDir/*.html $WebDir/*.css
rm -rf $WebDir/examples $WebDir/images $WebDir/refManual 

tar xzf $wwwTarGZ
cp -r doc/* $WebDir
