  sed s/"Generated on .* for libQGLViewer by"/"libQGLViewer $version documentation generated by"/g $f.tmp > $f
  rm $f.tmp
done

cd - > /dev/null

# cwExtrator
./cwExtractor
cp qglviewer.cw ../QGLViewer
