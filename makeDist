mv fullPackage.tar.gz $libNameVersion.tar.gz

cd $WebDir

cd $SrcDir
test -f md5sum.txt && rm md5sum.txt
md5sum `find . -type f | sort` > md5sum.txt
ls -1 | grep -v "^lib" | grep -v "index.php" | grep -v "md5sum.txt"
cd - > /dev/null

echo "Checking links..."
checkLinks.pl -r
exit
fi



test -d /tmp || error "Run with web option on dzsrv-linux."


